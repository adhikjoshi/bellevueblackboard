<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/chalkbg" 
    android:gravity="center_horizontal" 
    android:layout_gravity="center_vertical|center_horizontal">
    
    <TextView android:layout_marginTop="20sp" 
    		  android:id="@+id/textView1" 
    		  android:textSize="20sp" 
    		  android:layout_width="wrap_content" 
    		  android:layout_height="wrap_content" 
    		  android:text="BU Blackboard for Android"></TextView>
    		  
    <TableRow android:layout_width="fill_parent" 
    		  android:layout_height="wrap_content" 
    		  android:id="@+id/tableRow1">
        <TextView android:layout_margin="15sp" 
        		  android:id="@+id/textView2" 
        		  android:layout_height="wrap_content" 
        		  android:layout_width="wrap_content" 
        		  android:text="User(Student) ID:"></TextView>
        		  
        <EditText android:layout_height="wrap_content" 
        		  android:layout_marginTop="20sp" 
        		  android:layout_width="fill_parent" 
        		  android:layout_marginRight="10sp" 
        		  android:id="@+id/txtUserName" 
        		  android:singleLine="true"></EditText>
    </TableRow>
    
    <TableRow android:layout_width="fill_parent" 
    		  android:layout_height="wrap_content" 
    		  android:id="@+id/TableRow01">
    		  
        <TextView android:layout_margin="20sp" 
        		  android:id="@+id/TextView01" 
        		  android:layout_height="wrap_content" 
        		  android:layout_width="wrap_content" 
        		  android:text="Password:"></TextView>
        		  
        <EditText android:password="true" 
        		  android:layout_height="wrap_content" 
        		  android:layout_marginTop="20sp" 
        		  android:layout_marginRight="10sp" 
        		  android:layout_marginLeft="35sp" 
        		  android:layout_width="fill_parent" 
        		  android:id="@+id/txtPassword" 
        		  android:singleLine="true"></EditText>
    </TableRow>
    
    <Button android:layout_height="wrap_content" 
    		android:layout_width="fill_parent" 
    		android:layout_marginTop="20sp" 
    		android:layout_marginRight="10sp" 
    		android:layout_marginLeft="10sp" 
    		android:id="@+id/btnLogIn" 
    		android:text="Log In..."></Button>
</LinearLayout>